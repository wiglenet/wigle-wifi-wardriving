<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".GpxManagementActivity"
    android:fitsSystemWindows="false">
    <LinearLayout android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@+id/inline_status_bar"
        android:background="@color/child_activity_background">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/ml_gpx_map_rl"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <org.maplibre.android.maps.MapView
                    android:id="@+id/maplibreView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/gpx_back_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|top">
                <ImageButton
                    android:id="@+id/gpx_back_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    style="@style/NetworkViewOverlay"
                    android:contentDescription="@string/menu_settings"
                    android:src="?attr/homeAsUpIndicator"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/gpx_info"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                tools:visibility="visible">
                <TextView
                    android:id="@+id/gpx_rundistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:textColor="#FFFF"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:background="#AA333333"
                    tools:text="8,888.8 km"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="0dp" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="@color/child_activity_background">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gpx_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/gpx_recycler_element"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/progress_panel_layout"/>
</RelativeLayout>