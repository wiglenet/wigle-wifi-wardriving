<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".GpxManagementActivity"
    android:fitsSystemWindows="false">
    <LinearLayout android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_above="@+id/inline_status_bar"
        android:background="@color/child_activity_background">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/gpx_map_rl"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            </RelativeLayout>
            <ImageButton
                android:id="@+id/gpx_back_button"
                android:layout_marginVertical="32dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#00000000"
                android:contentDescription="@string/menu_settings"
                android:src="@drawable/arrow_left"
                android:gravity="end"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:id="@+id/gpx_info"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/gpx_rundistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:textColor="#FFFF"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:background="#AA333333"
                        tools:text="8,888.8 km"/>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="0dp" />
                </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:background="@color/child_activity_background">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/gpx_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/gpx_recycler_element"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/progress_panel_layout"/>
</RelativeLayout>