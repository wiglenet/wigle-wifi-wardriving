<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
	    android:layout_width="fill_parent" android:layout_height="fill_parent">

<TextView android:id="@+id/subject" android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
	      style="@style/NewsTitleStyle"/>
<TextView android:id="@+id/poster_date" android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
	      style="@style/NewsDateStyle"/>
<TextView android:id="@+id/post" android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:layout_weight="1"
		  style="@style/NewsPostStyle"/>

<TextView android:id="@+id/link" android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textSize="16sp"
          android:gravity="start"
          android:layout_marginBottom="4sp"/>
</LinearLayout>

