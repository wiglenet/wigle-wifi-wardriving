<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearlayout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        style="@style/InvertedBackground">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/queue_depth"
        style="@style/InvertedText"
        android:textSize="16sp"
        android:paddingEnd="2dp"
        android:paddingStart="0dp"
        />
    </LinearLayout>
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/uploads_swipe_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/uploads_list_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/uploads_throbber"
                android:paddingTop="50dp"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:tint="?attr/colorControlNormal">
            </ImageView>
            <ImageView
                android:id="@+id/uploads_error"
                android:paddingTop="50dp"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/no_connection"
                android:visibility="gone"
                app:tint="?attr/colorControlNormal">
            </ImageView>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
