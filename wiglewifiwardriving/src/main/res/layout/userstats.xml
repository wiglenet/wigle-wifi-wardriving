<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stats_scrolllayout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        >
        <ImageView
            android:id="@+id/badgeImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:paddingRight="60dp"
            android:paddingLeft="60dp"/>
        <LinearLayout
            android:id="@+id/linearlayout2"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/rank_title"
                android:textSize="24sp"
                android:paddingEnd="6dp"
                android:paddingStart="0dp"/>
            <TextView
                android:id="@+id/rank"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/unknown_number"
                style="@style/UploadColor"
                android:textSize="24sp"
                android:paddingEnd="5dip"
                android:paddingStart="0dp"/>
            <TextView
                android:id="@+id/prevRank"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/unknown_number"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/month_rank_title"
                android:textSize="20sp"
                android:paddingEnd="6dp"
                android:paddingStart="0dp"
                />

            <TextView
                android:id="@+id/monthRank"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/unknown_number"
                style="@style/UploadColor"
                android:textSize="20sp"
                android:paddingEnd="5dip"
                android:paddingStart="0dp"/>

            <TextView
                android:id="@+id/prevMonthRank"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/unknown_number"
                android:textSize="20sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/discovered"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_to_us"
                android:textSize="20sp"
                android:paddingStart="14sp"
                android:paddingLeft="14sp"
                android:paddingRight="14sp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:weightSum="3"
            android:baselineAligned="false">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_wifi_sm"/>
                <TextView
                    android:id="@+id/discoveredWiFiGPS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_unknown"
                    android:textSize="17sp"
                    android:paddingBottom="2dp"
                    style="@style/WiFiColor"
                    android:paddingStart="4dip"
                    android:paddingEnd="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_bt_sm"/>
                <TextView
                    android:id="@+id/discoveredBtGPS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_unknown"
                    android:textSize="17sp"
                    android:paddingBottom="2dp"
                    style="@style/BtColor"
                    android:paddingEnd="0dp"
                    android:paddingStart="2dip"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_cell_sm"/>
                <TextView
                    android:id="@+id/discoveredCellGPS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_unknown"
                    android:textSize="17sp"
                    android:paddingBottom="2dp"
                    style="@style/CellColor"
                    android:paddingEnd="0dp"
                    android:paddingStart="4dip"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_seen"
                android:textSize="20sp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:weightSum="3"
            android:baselineAligned="false">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_wifi_sm"/>
                <TextView
                    android:id="@+id/discoveredWiFi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_unknown"
                    android:textSize="15sp"
                    android:paddingBottom="2dp"
                    style="@style/WiFiColor"
                    android:paddingEnd="0dp"
                    android:paddingStart="4dip"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_bt_sm"/>
                <TextView
                    android:id="@+id/discoveredBt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_unknown"
                    android:textSize="15sp"
                    android:paddingBottom="2dp"
                    style="@style/BtColor"
                    android:paddingEnd="0dp"
                    android:paddingStart="2dip"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_cell_sm"/>
                <TextView
                    android:id="@+id/discoveredCell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status_unknown"
                    android:textSize="15sp"
                    android:paddingBottom="2dp"
                    style="@style/CellColor"
                    android:paddingEnd="0dp"
                    android:paddingStart="4dip"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            >
            <TextView
                android:id="@+id/totalWiFiLocations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_unknown"
                android:textSize="16sp"
                android:paddingBottom="2dip"
                style="@style/WiFiColor"
                android:paddingEnd="3dip"
                android:paddingStart="0dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/totallocs_title"
                android:textSize="16sp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/eventMonthCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_unknown"
                android:textSize="16sp"
                android:paddingBottom="2dip"
                style="@style/WiFiColor"
                android:paddingStart="0dp"
                android:paddingEnd="3dip" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monthcount_title"
                android:textSize="16sp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/eventPrevMonthCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_unknown"
                android:textSize="16sp"
                android:paddingBottom="2dp"
                style="@style/WiFiColor"
                android:paddingStart="0dp"
                android:paddingEnd="3dip" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prevmonthcount_title"
                android:textSize="16sp"
                android:textColor="#909090"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_unknown"
                android:textSize="16sp"
                android:paddingBottom="2dp"
                style="@style/FgStatColor"
                android:paddingEnd="5dip"
                android:paddingStart="0dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/firsttransid_title"
                android:textSize="16sp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_unknown"
                android:textSize="16sp"
                style="@style/FgStatColor"
                android:paddingEnd="5dip"
                android:paddingStart="0dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lasttransid_title"
                android:textSize="16sp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/actual_prevrank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_unknown"
                android:textSize="16sp"
                style="@style/FgStatColor"
                android:paddingEnd="5dip"
                android:paddingStart="0dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prevrank_title"
                android:textSize="16sp"
                />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/actual_prevmonthrank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_unknown"
                android:textSize="16sp"
                style="@style/FgStatColor"
                android:paddingEnd="5dip"
                android:paddingStart="0dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prevmonthrank_title"
                android:textSize="16sp"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
