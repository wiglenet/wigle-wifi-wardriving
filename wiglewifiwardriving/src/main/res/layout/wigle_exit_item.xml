<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="48dp"
    android:gravity="center_vertical|start"
    android:clipToPadding="false">
    <!-- android:background="@drawable/wigle_menu_item_exit" -->
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/menu_item_icon_size"
        android:layout_height="@dimen/menu_item_icon_size"
        android:gravity="center_vertical|start"
        android:src="@android:drawable/ic_delete"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="12dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/icon"
        android:textColor="@color/colorNavigationItemExitFg"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="0dp"
        android:text="@string/menu_exit"
        android:textStyle="bold"
        android:textAppearance="@style/NavigationDrawerStyle"
        />
</RelativeLayout>